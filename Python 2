def initialiseBoard(width):
    board=[]
    if not width%2==0:
        return('Board must be an even width.')
    if width<4:
        return('Board width must be at least 4')
    lowermid=(width/2)-1
    uppermid=(width/2)
    for numberrow in range(width):
        row=[]
        for square in range(width):
            if numberrow==lowermid or numberrow==uppermid:
                if square==lowermid or square==uppermid:
                    if square==numberrow:
                        row.append(1)
                    else:
                        row.append(-1)
                else:
                    row.append(0)
            else:
                row.append(0)
            print(square)
            print(numberrow)
            print(row)
        board.append(row)
        print(board)
        print(lowermid)
        print(uppermid)
    return board

